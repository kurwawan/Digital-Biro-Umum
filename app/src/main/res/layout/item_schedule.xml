<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mNoJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Jadwal 1"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorBgMain"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/title_time1"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/waktu_pinjam"
            android:drawableLeft="@drawable/waktu_pinjam"
            android:drawablePadding="4dp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/mWaktuPinjam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            tools:text="Jumat 22 Desember 2017 - 07.00 WIB"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/title_time2"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/waktu_kembali"
            android:drawableLeft="@drawable/waktu_kembali"
            android:drawablePadding="4dp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/mWaktuKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Jumat 22 Desember 2017 - 07.00 WIB"
            android:textColor="@android:color/black"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>